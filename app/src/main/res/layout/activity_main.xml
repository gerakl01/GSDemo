<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="googlemap.gsdemo.dji.com.gsdemo.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ConnectStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GSDemo"
            android:textColor="#000000"
            android:textSize="21sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add" />
        <Button
            android:id="@+id/add_w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Square or grid settings" />
        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button



            android:id="@+id/config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="Config" />
        <Button
            android:id="@+id/prepare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="Prepare" />
        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start" />
        <Button
            android:id="@+id/stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop" />

        <Button
            android:id="@+id/alt_stay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Points settings" />


    </LinearLayout>










     <LinearLayout android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="horizontal">


             <RelativeLayout android:layout_width="0dp"
                 android:layout_height="fill_parent"
                 android:layout_weight="1" >


                 <org.mapsforge.map.android.view.MapView
                     android:id="@+id/mapview"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:layout_alignParentLeft="true"
                     android:layout_weight="14"
                     android:background="#000000" />

                 <ImageButton
                     android:id="@+id/locate"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentStart="true"
                     android:layout_alignParentTop="true"
                     android:background="@android:color/transparent"
                     android:src="@drawable/rszgps" />

             </RelativeLayout>


         <RelativeLayout
             android:layout_width="0dp"
                 android:layout_height="fill_parent"
                 android:layout_weight="1" >


             -->


             <LinearLayout
                 android:id="@+id/main_title_rl"
                     android:layout_width="200dp"
                 android:layout_height="20dp"
                 android:layout_alignParentTop="true"
                 android:layout_toEndOf="@+id/camera"
                 android:layout_weight="1"
                     android:background="@color/black_overlay"
                 android:orientation="vertical">


             </LinearLayout>

         <TextView
             android:id="@+id/timer"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:layout_alignTop="@+id/video_previewer_surface"

             android:layout_centerHorizontal="true"
             android:layout_weight="1"
             android:gravity="center"
             android:textColor="#ffffff" />

                 />


             <TextureView
             android:id="@+id/video_previewer_surface"
             android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_above="@+id/linearLayout"
                 android:layout_alignParentRight="true"
                 android:layout_below="@+id/main_title_rl"
             android:layout_centerHorizontal="true"
                 android:layout_gravity="center" />

                 <ImageView
                     android:id="@+id/ImageFeed"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_alignParentRight="true"

                     android:layout_centerHorizontal="true"
                     android:layout_gravity="center"
                     android:background="#FFFFFF00" />


             <LinearLayout
                 android:id="@+id/linearLayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"

                 android:orientation="horizontal">
             <Button
                 android:id="@+id/btn_capture"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_weight="1"
                 android:text="Capture"
                 android:textSize="10sp"/>

             <ToggleButton
                 android:id="@+id/btn_record"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_weight="1"
                 android:checked="false"
                 android:text="Start Record"
                 android:textOff="Start Record"
                 android:textOn="Stop Record"
                 android:textSize="12dp" />

             <Button
                 android:id="@+id/btn_shoot_photo_mode"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_weight="1"
                 android:text="Shoot Photo Mode"
                 android:textSize="12sp"/>
             <Button
                 android:id="@+id/btn_record_video_mode"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_weight="2"
                 android:text="Record Video Mode" />


         </LinearLayout>

             <Spinner
                 android:id="@+id/camera"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_above="@+id/timer"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentTop="true"
                 android:layout_toStartOf="@+id/timer"
                 android:layout_weight="0.5"
                 android:spinnerMode="dropdown" />



             <Spinner
                 android:id="@+id/image_resol"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="0.5"
                 android:spinnerMode="dropdown"
                 android:layout_alignParentTop="true"
                 android:layout_alignParentEnd="true"
                 android:layout_toEndOf="@+id/main_title_rl"
                 android:layout_above="@+id/video_previewer_surface" />



             <TextView
                 android:id="@+id/ConnectStatusTextViewCamera"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_above="@+id/timer"
                 android:layout_toEndOf="@+id/camera"
                 android:text="FPVDemo"
                 android:textColor="@android:color/white"
                 android:textSize="19sp" />


             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_alignBottom="@+id/video_previewer_surface"
                 android:layout_alignParentStart="true">

                 <TextView
                     android:id="@+id/speed"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0"
                     android:textSize="19sp"

                     />
                 <TextView
                     android:id="@+id/speedx"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0"
                     android:textSize="19sp"

                     />
                 <TextView
                     android:id="@+id/speedy"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0"
                     android:textSize="19sp"

                     />


                 <TextView
                     android:id="@+id/altitude"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0"
                     android:textSize="19sp"

                     />


             </LinearLayout>

           <!--  <Button
                 android:id="@+id/show_dropdown_menu"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="#059636"
                 android:onClick="showDropDownMenu"
                 android:text="Show DropDown Menu"
                 android:textColor="#fff"
                 android:layout_alignParentTop="true"
                 android:layout_alignParentStart="true" /-->


         </RelativeLayout>

     </LinearLayout>

   </LinearLayout>
